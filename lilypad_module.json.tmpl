{
    "machine": {
        "gpu": 0,
        "cpu": 1000,
        "ram": 4000
    },
    "job": {
        "APIVersion": "V1beta1",
        "Metadata": {
            "CreatedAt": "0001-01-01T00:00:00Z",
            "Requester": {}
        },
        "Spec": {
            "Deal": { "Concurrency": 1 },
            "Docker": {
                "WorkingDirectory": "/workspace",
                "Entrypoint": ["python", "/src/run_inference.py"],
                "EnvironmentVariables": [
                    {{ if .input }}"INPUT={{ js .input }}"{{ else }}"INPUT=Default input for analysis",{{ end }}
                    {{ if .input }}"INPUT_TEXT={{ js .input }}"{{ else }}"INPUT_TEXT=Default input_text for analysis",{{ end }}
                    {{ if .input_text }}"INPUT_TEXT={{ js .input_text }}"{{ else }}"INPUT_TEXT=Default text for analysis"{{ end }}
                ],
                "Image": "devlinrocha/lilypad-module-sentiment:latest"
            },
            "Engine": "Docker",
            "Network": { "Type": "None" },
            "Outputs": [
                { "Name": "outputs", "Path": "/outputs" }
            ],
            "PublisherSpec": { "Type": "ipfs" },
            "Resources": { "CPU": "1", "Memory": "4000" },
            "Timeout": 600,
            "Wasm": { "EntryModule": {} }
        }
    }
}